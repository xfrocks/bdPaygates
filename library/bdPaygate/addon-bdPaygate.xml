		<h3 class="subHeading">{xen:phrase available_upgrades}</h3>
		<ul>
		<xen:foreach loop="$available" value="$upgrade">
			<li class="primaryContent">
				<div class="upgrade">					
					<div class="upgradeForm">
						<xen:if hascontent="true">
							<div class="cost">{$upgrade.costPhrase}</div>
